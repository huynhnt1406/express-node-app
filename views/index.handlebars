<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
      
    <h1>{{titleWeb}}</h1>
    <form action="/api/members" method="POST" class="mb-4">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" name="name" type="text">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" name="email" type="text">
        </div>
         <div class="form-group">
            <label for="address">Address</label>
            <input class="form-control" name="address" type="text">
        </div>
        <div class="btn">
            <button type="submit" class="btn btn-success">Add member</button>
        </div>
        <a href="/api/members" class="btn btn-primary">View API</a>
    </form>
    <h4>Members</h4>
    <ul class="list-group">
        {{#each members}}
        <li class="list-group-item">
            <form action="/api/membe/" method="DELETE"></form>
            <p>Full name : <strong>{{this.name}}</strong> </p>
            <p>Email :<strong>{{this.email}}</strong></p>
            <p>Address : <strong>{{this.address}}</strong></p>
            <button  class="btn btn-danger">Delete</button>
            <button type="submit" class="btn btn-success">Update</button>
        </li>
        {{/each}}
    </ul>
</body>
</html>